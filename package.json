    "lint": "pnpm --filter web lint",
    "typecheck": "pnpm --filter web typecheck",
    "convex:dev": "pnpm --filter convex-backend dev",
    "prepare": "husky"
  },
  "devDependencies": {
    "convex": "^1.28.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "next": "14.2.3",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": "sh -c 'cd apps/web && pnpm lint'"
  }
}
